<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:layout_margin="10dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Camp Title -->
        <TextView
            android:id="@+id/campTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mega Blood Donation Camp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blood"
            android:ellipsize="end"
            android:maxLines="2" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp">
                <!-- Organizer -->
            <TextView
                android:id="@+id/organizerText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/goGPSBtn"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Organized by Red Cross"
                android:textColor="#616161"
                android:textSize="14sp" />

                <!-- Location and City -->
            <TextView
                android:id="@+id/campLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/organizerText"
                android:layout_marginTop="6dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/goGPSBtn"
                android:text="123 Main Street, Delhi"
                android:textColor="#424242"
                android:textSize="14sp" />

                <!-- Date -->
            <TextView
                android:id="@+id/campDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/campLocation"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="6dp"
                android:layout_toStartOf="@+id/goGPSBtn"
                android:layout_alignParentStart="true"
                android:text="Date: April 10, 2025"
                android:textColor="#00796B"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/goGPSBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/navigation"
                android:background="#00000000"
                android:layout_alignTop="@id/organizerText"
                android:layout_alignBottom="@id/campDate"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>
