<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <TextView
            android:id="@+id/bloodTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Blood Request"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/blood"
            android:textStyle="bold"
            android:textSize="26sp"
            app:layout_constraintTop_toBottomOf="@id/bloodlogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/bloodlogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:foreground="@drawable/logo"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/blood"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            />

        <EditText
            android:id="@+id/etPatientName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:background="@drawable/rounded"
            android:layout_marginTop="10dp"
            android:hint="Patient Name"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@id/bloodTxt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etHospitalName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:background="@drawable/rounded"
            android:hint="Hospital Name"
            app:layout_constraintTop_toBottomOf="@id/etPatientName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:background="@drawable/rounded"
            android:hint="Full Address"
            android:inputType="textPostalAddress"
            app:layout_constraintTop_toBottomOf="@id/etHospitalName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>
        <Button
            android:id="@+id/btnDeadline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@drawable/rounded"
            android:text="Select Deadline Date"
            app:layout_constraintTop_toBottomOf="@id/etLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:background="@drawable/rounded"
            android:entries="@array/cities"
            android:hint="City"
            app:layout_constraintTop_toBottomOf="@id/btnDeadline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>
        <LinearLayout
            android:id="@+id/spinContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/spinnerCity">
            <Spinner
                android:id="@+id/spinnerBloodGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/rounded"
                android:entries="@array/blood_groups"
                android:paddingHorizontal="20dp"
                android:layout_weight="1"
                android:paddingVertical="15dp" />

            <Spinner
                android:id="@+id/spinnerUrgency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded"
                android:entries="@array/urgency_level"
                android:layout_weight="1"
                android:paddingHorizontal="20dp"
                android:paddingVertical="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinnerCity" />
        </LinearLayout>

        <EditText
            android:id="@+id/etNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Note to Donor (Optional)"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp"
            android:background="@drawable/rounded"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/spinContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:background="@color/grey"
            android:paddingVertical="15dp"
            android:layout_marginHorizontal="10dp"
            android:hint="Description (Optional)"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@id/etNote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>


        <Button
            android:id="@+id/btnSubmitRequest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@drawable/rounded"
            android:text="Submit Blood Request"
            app:layout_constraintTop_toBottomOf="@id/etDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>